{
  "name": "naveditor",
  "version": "0.1.0",
  "description": "Navigator/Editor PoC built on @devalbo packages",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "naveditor": "./dist/cli.js"
  },
  "scripts": {
    "postinstall": "playwright install chromium",
    "build": "vite build && vite build --mode node",
    "build:web": "vite build",
    "build:cli": "vite build --mode node",
    "dev": "vite",
    "cli": "node dist/cli.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "node tests/scripts/run-unit.mjs",
    "test:coverage": "node tests/scripts/run-unit.mjs --coverage",
    "test:bdd": "pnpm test:bdd:terminal && pnpm test:bdd:browser",
    "test:bdd:terminal": "node tests/scripts/run-bdd-terminal.mjs",
    "test:bdd:browser": "node tests/scripts/run-bdd-browser.mjs",
    "test:bdd:browser-headless": "node tests/scripts/run-bdd-browser.mjs --headless",
    "test:all": "pnpm test:unit && pnpm test:bdd"
  },
  "dependencies": {
    "@devalbo/commands": "workspace:*",
    "@devalbo/filesystem": "workspace:*",
    "@devalbo/shared": "workspace:*",
    "@devalbo/state": "workspace:*",
    "@devalbo/ui": "workspace:*",
    "commander": "^14.0.2",
    "effect": "^3.19.14",
    "ink-select-input": "^6.2.0",
    "ink-web": "^0.1.11",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "xterm": "^5.3.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "@inkjs/ui": "^2.0.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-test-renderer": "^19.1.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "ink": "^6.6.0",
    "ink-testing-library": "^4.0.0",
    "playwright": "^1.57.0",
    "react-test-renderer": "^19.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vitest": "^4.0.16"
  }
}
