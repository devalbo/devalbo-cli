{
  "name": "naveditor",
  "version": "0.1.0",
  "description": "Navigator/Editor PoC built on @devalbo packages",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "naveditor": "./dist/cli.js"
  },
  "scripts": {
    "build": "pnpm build:cli",
    "build:cli": "vite build --mode node",
    "cli": "node dist/cli.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "node tests/scripts/run-unit.mjs",
    "test:coverage": "node tests/scripts/run-unit.mjs --coverage",
    "test:bdd": "pnpm test:bdd:terminal && pnpm test:bdd:browser",
    "test:bdd:terminal": "node tests/scripts/run-bdd-terminal.mjs",
    "test:bdd:browser": "node tests/scripts/run-bdd-browser.mjs",
    "test:bdd:browser-headless": "node tests/scripts/run-bdd-browser.mjs --headless",
    "test:all": "pnpm test:unit && pnpm test:bdd"
  },
  "dependencies": {
    "@devalbo/naveditor-lib": "workspace:*",
    "@devalbo/commands": "workspace:*",
    "@devalbo/filesystem": "workspace:*",
    "@devalbo/shared": "workspace:*",
    "@devalbo/state": "workspace:*",
    "@devalbo/ui": "workspace:*",
    "@sqlite.org/sqlite-wasm": "3.51.2-build6",
    "@xterm/xterm": "^6.0.0",
    "commander": "^14.0.3",
    "effect": "^3.19.17",
    "ink-select-input": "^6.2.0",
    "ink-web": "^0.1.11",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tinybase": "^7.3.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@inkjs/ui": "^2.0.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/react-test-renderer": "^19.1.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "ink": "^6.7.0",
    "ink-testing-library": "^4.0.0",
    "playwright": "^1.58.2",
    "react-test-renderer": "^19.2.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vitest": "^4.0.18"
  }
}
