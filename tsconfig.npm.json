{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@devalbo-cli/branded-types": ["packages/branded-types/src/index.ts"],
      "@devalbo-cli/cli-shell": ["packages/cli-shell/src/index.ts"],
      "@devalbo-cli/cli-shell/*": ["packages/cli-shell/src/*"],
      "@devalbo-cli/commands": ["packages/commands/src/index.ts"],
      "@devalbo-cli/filesystem": ["packages/filesystem/src/index.ts"],
      "@devalbo-cli/filesystem/*": ["packages/filesystem/src/*"],
      "@devalbo-cli/shared": ["packages/shared/src/index.ts"],
      "@devalbo-cli/shared/*": ["packages/shared/src/*"],
      "@devalbo-cli/state": ["packages/state/src/index.ts"],
      "@devalbo-cli/state/*": ["packages/state/src/*"],
      "@devalbo-cli/ui": ["packages/ui/src/index.ts"],
      "@devalbo-cli/ui/*": ["packages/ui/src/*"],
      "ink": ["node_modules/ink-web/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "packages/**/*.ts", "packages/**/*.tsx"]
}
