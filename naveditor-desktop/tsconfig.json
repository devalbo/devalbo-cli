{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../editor-lib/src/*"],
      "@devalbo-cli/cli-shell": ["../packages/cli-shell/src/index.ts"],
      "@devalbo-cli/cli-shell/*": ["../packages/cli-shell/src/*"],
      "@devalbo-cli/filesystem": ["../packages/filesystem/src/index.ts"],
      "@devalbo-cli/commands": ["../packages/commands/src/index.ts"],
      "@devalbo-cli/shared": ["../packages/shared/src/index.ts"],
      "@devalbo-cli/solid-client": ["../packages/solid-client/src/index.ts"],
      "@devalbo-cli/state": ["../packages/state/src/index.ts"],
      "@devalbo-cli/ui": ["../packages/ui/src/index.ts"]
    }
  },
  "include": ["src"]
}
