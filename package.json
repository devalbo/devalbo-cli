{
  "name": "@devalbo-cli/cli",
  "private": false,
  "version": "0.1.0",
  "packageManager": "pnpm@10.29.3",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp dist/vite-plugin.js dist/vite.js && cp dist/vite-plugin.d.ts dist/vite.d.ts",
    "build:dist": "pnpm --filter './packages/*' -r build && pnpm run build",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:workspace": "vitest run",
    "web:dev": "pnpm -C naveditor-web dev",
    "web:build": "pnpm -C naveditor-web build",
    "terminal": "pnpm -C naveditor-terminal terminal",
    "terminal:interactive": "pnpm -C naveditor-terminal interactive",
    "terminal:dev": "pnpm -C naveditor-terminal terminal:dev",
    "desktop:dev": "pnpm -C naveditor-desktop dev",
    "desktop:build": "pnpm -C naveditor-desktop build"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@devalbo-cli/cli-shell": "workspace:*",
    "@devalbo-cli/filesystem": "workspace:*",
    "@devalbo-cli/shared": "workspace:*",
    "@devalbo-cli/state": "workspace:*",
    "vite-plugin-node-polyfills": "^0.25.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
