{
  "name": "devalbo-cli",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "browser": "./dist/node.browser.js",
      "import": "./dist/node.js"
    }
  },
  "scripts": {
    "build": "mkdir -p dist && cp packages/filesystem/dist/node.js packages/filesystem/dist/node.browser.js packages/filesystem/dist/node.d.ts packages/filesystem/dist/node.browser.d.ts dist/ && tsup",
    "build:packages": "node scripts/build-packages.cjs",
    "build:dist": "npm run build:packages && npm run build",
    "type-check": "pnpm run --recursive --if-present type-check",
    "test": "pnpm run --recursive --if-present test",
    "test:workspace": "vitest run",
    "web:dev": "pnpm run --filter naveditor-web dev",
    "web:build": "pnpm run --filter naveditor-web build",
    "terminal": "pnpm run --filter naveditor-terminal terminal",
    "terminal:interactive": "pnpm run --filter naveditor-terminal interactive",
    "terminal:dev": "pnpm run --filter naveditor-terminal terminal:dev",
    "desktop:dev": "pnpm run --filter naveditor-desktop dev",
    "desktop:build": "pnpm run --filter naveditor-desktop build"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "vite-plugin-node-polyfills": "^0.25.0"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "devalbo-cli-shell": "file:./packages/cli-shell",
    "@devalbo-cli/filesystem": "file:./packages/filesystem",
    "@devalbo-cli/shared": "file:./packages/shared",
    "@devalbo-cli/state": "file:./packages/state",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "naveditor",
    "editor-lib",
    "naveditor-web",
    "naveditor-desktop",
    "naveditor-terminal"
  ]
}
