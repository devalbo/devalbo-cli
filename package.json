{
  "name": "@devalbo-cli/cli",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "naveditor",
    "editor-lib",
    "naveditor-web",
    "naveditor-desktop",
    "naveditor-terminal"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {"types": "./dist/index.d.ts", "import": "./dist/index.js"},
    "./vite": {"types": "./dist/vite.d.ts", "import": "./dist/vite.js"}
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp dist/vite-plugin.js dist/vite.js && cp dist/vite-plugin.d.ts dist/vite.d.ts",
    "build:packages": "node scripts/build-packages.cjs",
    "build:dist": "npm run build:packages && npm run build",
    "type-check": "npm run type-check --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:workspace": "vitest run",
    "web:dev": "npm run dev -w naveditor-web",
    "web:build": "npm run build -w naveditor-web",
    "terminal": "npm run terminal -w naveditor-terminal",
    "terminal:interactive": "npm run interactive -w naveditor-terminal",
    "terminal:dev": "npm run terminal:dev -w naveditor-terminal",
    "desktop:dev": "npm run dev -w naveditor-desktop",
    "desktop:build": "npm run build -w naveditor-desktop"
  },
  "files": ["dist", "README.md"],
  "dependencies": {
    "@devalbo-cli/cli-shell": "file:./packages/cli-shell",
    "@devalbo-cli/filesystem": "file:./packages/filesystem",
    "@devalbo-cli/shared": "file:./packages/shared",
    "@devalbo-cli/state": "file:./packages/state",
    "vite-plugin-node-polyfills": "^0.25.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
