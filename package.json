{
  "name": "devalbo-cli",
  "private": false,
  "version": "0.2.4",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/browser.js",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "browser": "./dist/node.browser.js",
      "import": "./dist/node.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && mkdir -p dist && cp packages/filesystem/dist/node.js packages/filesystem/dist/node.browser.js packages/filesystem/dist/node.d.ts packages/filesystem/dist/node.browser.d.ts dist/ && cp -R packages/filesystem/dist/drivers packages/filesystem/dist/watcher dist/ && tsup",
    "build:packages": "node scripts/build-packages.cjs",
    "build:dist": "npm run build:packages && npm run build",
    "prepare": "npm run build:dist",
    "type-check": "pnpm run --recursive --if-present type-check",
    "test": "pnpm run --recursive --if-present test",
    "test:workspace": "vitest run",
    "changeset": "changeset",
    "version-packages": "changeset version"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "vite-plugin-node-polyfills": "^0.25.0"
  },
  "peerDependencies": {
    "commander": "^14.0.0",
    "ink": "^6.7.0",
    "ink-web": "^0.1.11",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@devalbo-cli/filesystem": "workspace:*",
    "@devalbo-cli/shared": "workspace:*",
    "@devalbo-cli/state": "workspace:*",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@devalbo-cli/cli-shell": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "workspaces": [
    "packages/*"
  ]
}
